<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/beer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border_background">

        <ImageView
            android:layout_width="@dimen/beer_image"
            android:layout_height="@dimen/beer_image"
            android:src="@drawable/kune_beer"
            android:padding="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:contentDescription="@string/content_desc"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center">

            <ImageView
                android:id="@+id/addBeer"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/add_beer"
                android:contentDescription="@string/content_desc"/>

            <TextView
                android:id="@+id/qty_beer1"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:textStyle="bold"
                tools:text="5"/>

            <ImageView
                android:id="@+id/lessBeer"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/less_beer"
                android:contentDescription="@string/content_desc"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/galon1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/galon" />

                <ImageView
                    android:id="@+id/pint1"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/pinta"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/halfPint1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/media_pinta"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/beer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/beer1"
        android:background="@drawable/border_background">

        <ImageView
            android:layout_width="@dimen/beer_image"
            android:layout_height="@dimen/beer_image"
            android:src="@drawable/weiss"
            android:padding="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:contentDescription="@string/content_desc"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/addBeer2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/add_beer"
                    android:contentDescription="@string/content_desc"/>

                <TextView
                    android:id="@+id/qty_beer2"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    tools:text="5"/>

                <ImageView
                    android:id="@+id/lessBeer2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/less_beer"
                    android:contentDescription="@string/content_desc"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/galon2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/galon" />

                <ImageView
                    android:id="@+id/pint2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/pinta"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/half_pint2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/media_pinta"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/beer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/beer2"
        android:background="@drawable/border_background">

        <ImageView
            android:layout_width="@dimen/beer_image"
            android:layout_height="@dimen/beer_image"
            android:src="@drawable/amberlager"
            android:padding="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/content_desc"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/addBeer3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/add_beer"
                    android:contentDescription="@string/content_desc"/>

                <TextView
                    android:id="@+id/qty_beer3"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    tools:text="5"/>

                <ImageView
                    android:id="@+id/lessBeer3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/less_beer"
                    android:contentDescription="@string/content_desc"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/galon3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/galon" />

                <ImageView
                    android:id="@+id/pint3"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/pinta"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/half_pint3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/media_pinta"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/beer4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/beer3"
        android:background="@drawable/border_background">

        <ImageView
            android:layout_width="@dimen/beer_image"
            android:layout_height="@dimen/beer_image"
            android:src="@drawable/porter"
            android:padding="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/content_desc"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/addBeer4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/add_beer"
                    android:contentDescription="@string/content_desc"/>

                <TextView
                    android:id="@+id/qty_beer4"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    tools:text="5"/>

                <ImageView
                    android:id="@+id/lessBeer4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/less_beer"
                    android:contentDescription="@string/content_desc"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/galon" />

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/pinta"
                    android:layout_gravity="center"/>

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/media_pinta"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/beer5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/beer4"
        android:background="@drawable/border_background">

        <ImageView
            android:layout_width="@dimen/beer_image"
            android:layout_height="@dimen/beer_image"
            android:src="@drawable/beer_247"
            android:padding="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/content_desc"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/addBeer5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/add_beer"
                    android:contentDescription="@string/content_desc"/>

                <TextView
                    android:id="@+id/qty_beer5"
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    tools:text="5"/>

                <ImageView
                    android:id="@+id/lessBeer5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/less_beer"
                    android:contentDescription="@string/content_desc"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/galon" />

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/pinta"
                    android:layout_gravity="center"/>

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/media_pinta"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/aceptar_pedido"
        android:text="Hacer Pedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="@drawable/aceptar_pedido_button_bg"
        android:layout_below="@+id/beer5"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:id="@+id/separator_1"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/aceptar_pedido"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_500"/>

    <Button
        android:id="@+id/nosequepedir"
        android:text="No se que pedir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:background="@drawable/other_acc_button_bg"
        android:layout_below="@+id/aceptar_pedido"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/conductor_designado"
        android:text="Soy conductor designado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/white"
        android:background="@drawable/conductor_button_bg"
        android:layout_below="@+id/nosequepedir"
        android:layout_marginTop="8dp"/>

</RelativeLayout>
</ScrollView>